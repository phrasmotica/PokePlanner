<UserControl x:Class="PokePlanner.Controls.HMChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:PokePlanner.Controls"
             xmlns:util="clr-namespace:PokePlanner.Util"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="250">

    <StackPanel Background="{Binding Source={x:Static util:MyBrushes.PastelBlue}}">
        <Label Content="Hidden Machine Coverage" FontWeight="Bold" />
        
        <!-- labels for each HM -->
        <controls:HMLabel x:Name="hmLabel1" />
        <controls:HMLabel x:Name="hmLabel2" />
        <controls:HMLabel x:Name="hmLabel3" />
        <controls:HMLabel x:Name="hmLabel4" />
        <controls:HMLabel x:Name="hmLabel5" />
        <controls:HMLabel x:Name="hmLabel6" />
        <controls:HMLabel x:Name="hmLabel7" />
        <controls:HMLabel x:Name="hmLabel8" />
    </StackPanel>
</UserControl>