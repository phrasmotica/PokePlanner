<UserControl x:Class="PokePlanner.Controls.PokemonDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PokePlanner.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" BorderThickness="2" BorderBrush="White"
               Name="type1" />
        <Label Grid.Row="0" Grid.Column="1" BorderThickness="2" BorderBrush="White"
               Name="type2" />

        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                 Width="100"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 x:Name="searchBox"
                 TextChanged="SearchBox_OnTextChanged" />
    </Grid>
</UserControl>